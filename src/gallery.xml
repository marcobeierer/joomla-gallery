<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>com_gallery</name>
	<description>Gallery</description>
	
	<author>Marco Beierer</author>
	<authorEmail>marco@webguerilla.net</authorEmail>
	<authorUrl>http://webguerilla.net</authorUrl>
	
	<version>1.0.0-alpha.7</version>
	<creationDate>June 2014</creationDate>
	
	<copyright>Copyright (C) 2014 Marco Beierer. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/agpl-3.0.html GNU/AGPL</license>

	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>model</folder>
		<folder>views</folder>
		
		<file>controller.php</file>
		<file>gallery.php</file>
		<file>router.php</file>
		<file>index.html</file>
	</files>
	
	<media folder="media" destination="com_gallery">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<file>index.html</file>
	</media>
	
	<administration>
		<menu>com_gallery</menu>
		<files folder="admin">
			<folder>language</folder>
			<folder>views</folder>
			
			<file>config.xml</file>
			<file>controller.php</file>
			<file>gallery.php</file>
			<file>index.html</file>
		</files>
		
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_gallery.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_gallery.sys.ini</language>
		</languages>
	</administration>
	
</extension>